<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smarthomecontroller">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartHomeController"
        android:networkSecurityConfig="@xml/network_security_config">>

        <!-- Light Activity -->
        <activity
            android:name=".LightActivity"
            android:label="Light Activity"/>

        <!-- Thermostat Activity -->
        <activity
            android:name=".ThermostatActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.SmartHomeController.NoActionBar"/>

        <!-- Door Lock Activity -->
        <activity
            android:name=".DoorLockActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.SmartHomeController.NoActionBar"/>
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.SmartHomeController.NoActionBar"/>
        <activity
            android:name=".RegistrationActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.SmartHomeController.NoActionBar"/>
        <activity
            android:name=".activities.ScheduleActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.SmartHomeController.NoActionBar"/>
        <activity
            android:name=".DashboardActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.SmartHomeController.NoActionBar"/>
        <activity android:name=".SettingsActivity"/>


        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
